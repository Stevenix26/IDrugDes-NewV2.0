// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.dc"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model PharmacyStore{
  id   String  @id @default(cuid())
  name String
  address String
  phoneNumber BigInt


}

model Prescriptions {
  id   String  @id @default(cuid())
  userId String?
  name String?
  medication String
  description String
  prescriptionDate DateTime @default(now())
  Upload Bytes

}


